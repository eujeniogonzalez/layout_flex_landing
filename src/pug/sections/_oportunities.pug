mixin oportunity(direction = '', img_src, img_alt, title, description, button_text, button_fill)
    .oportunity(class = direction)
        .oportunity_image
            img(src = img_src, alt = img_alt)
        .oportunity_content 
            h2= title
            hr
            .oportunity_content_description= description
            .oportunity_content_button
                +button(button_text, button_fill)

